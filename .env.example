# Example environment variables
# Copy this file to .env and update with your values

# Application
APP_NAME="Secure Job Platform"
DEBUG=False
SECRET_KEY=change-this-to-a-random-secret-key-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
DATABASE_URL=postgresql://job_user:your_password_here@localhost:5432/job_platform

# Email Configuration (for OTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@jobplatform.com
EMAIL_FROM_NAME="Secure Job Platform"

# File Upload
UPLOAD_DIR=/home/ubuntu/projects/FCS/backend/uploads
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=pdf,docx

# Encryption
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=generate-this-with-fernet-key-generator

# Redis (for caching and rate limiting)
REDIS_URL=redis://localhost:6379/0

# OTP Settings
OTP_EXPIRY_MINUTES=5
OTP_LENGTH=6
MAX_OTP_ATTEMPTS=3

# Security
CORS_ORIGINS=["https://yourdomain.com"]
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
LOGIN_RATE_LIMIT_PER_HOUR=10

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/job-platform/app.log

# Optional: Celery (for background tasks)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
